<full-backup-content>
    <!-- Include the main database file -->
    <include domain="database" path="practice_database"/>
    <include domain="database" path="practice_database-shm"/>
    <include domain="database" path="practice_database-wal"/>
    
    <!-- Include shared preferences -->
    <include domain="sharedpref" path="."/>
    
    <!-- Exclude any sensitive data or large files if needed -->
    <!-- <exclude domain="database" path="large_temp_data.db"/> -->
</full-backup-content>